<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    android:contentDescription="Scrolling"
    tools:context=".UbahProfActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/shape8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape8"
            android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Profil"
            android:textColor="#000000"
            android:textSize="25dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/back2"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shape8"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:src="@drawable/shape13" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profile"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="150dp"/>
        
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/kamera"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="240dp"/>

        <TextView
            android:id="@+id/text27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/profile"
            android:text="Nama lengkap"
            android:textSize="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"/>

        <EditText
            android:id="@+id/namalengkap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape3"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text27"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:inputType="text"
            android:text="Ayu Nilam Sari"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#E2E1E1"
            android:paddingLeft="20dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/text28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/namalengkap"
            android:text="Nama pengguna"
            android:textSize="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"/>

        <EditText
            android:id="@+id/username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape3"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text28"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:inputType="text"
            android:text="ayyrfvgirl"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#E2E1E1"
            android:paddingLeft="20dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/text29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/username2"
            android:text="Email"
            android:textSize="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"/>

        <EditText
            android:id="@+id/email3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape3"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text29"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:inputType="textEmailAddress"
            android:text="ayyrfvgirl06@gmail.com"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#E2E1E1"
            android:paddingLeft="20dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/text30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/email3"
            android:text="Kata sandi"
            android:textSize="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"/>

        <EditText
            android:id="@+id/pass4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape3"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text30"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:inputType="textPassword"
            android:text="12345678"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#E2E1E1"
            android:paddingLeft="20dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/text31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/pass4"
            android:text="Tanggal lahir"
            android:textSize="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"/>

        <EditText
            android:id="@+id/datebirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape3"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text31"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:inputType="date"
            android:text="31 Agustus 2007"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#E2E1E1"
            android:paddingLeft="20dp"
            android:textSize="16dp"/>

    </RelativeLayout>

</ScrollView>