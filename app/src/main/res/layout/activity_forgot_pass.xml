<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFAEA0"
    android:orientation="vertical"
    tools:context=".ForgotPassActivity">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/close"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-248dp"
        android:src="@drawable/ellipse4" />

    <TextView
        android:id="@+id/pass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:text="Lupa Kata Sandi?"
        android:textColor="#000000"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="320dp"/>

    <TextView
        android:id="@+id/text20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Atur ulang kata sandi."
        android:textColor="#949391"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/email1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@id/text20"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="#666666"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape3"
        android:fontFamily="@font/poppins_medium"
        android:hint="Masukkan email anda"
        android:textSize="16dp"
        android:layout_below="@id/email1"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress"
        android:textColorHint="#E2E1E1"/>

    <TextView
        android:id="@+id/text21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="* Menggunakan kata sandi kuat yang tidak anda gunakan di tempat lain adalah ide bagus."
        android:textColor="#949391"
        android:textSize="12dp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/pass3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kata sandi"
        android:layout_below="@id/text21"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="#666666"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/pass4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape3"
        android:fontFamily="@font/poppins_medium"
        android:hint="Masukkan kata sandi baru"
        android:textSize="16dp"
        android:layout_below="@id/pass3"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:textColorHint="#E2E1E1"/>

    <EditText
        android:id="@+id/pass5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape3"
        android:fontFamily="@font/poppins_medium"
        android:hint="Ketik ulang kata sandi"
        android:textSize="16dp"
        android:layout_below="@id/pass4"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:textColorHint="#E2E1E1"/>

    <ImageButton
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass5"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape4"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/masuk3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selanjutnya"
        android:layout_alignParentRight="true"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="76dp"/>

</RelativeLayout>