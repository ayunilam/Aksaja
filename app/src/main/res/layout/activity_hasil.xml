<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".HasilActivity">

    <TextView
        android:id="@+id/selamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat ya!"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_bold"/>

    <TextView
        android:id="@+id/puas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selamat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Apa kamu puas dengan hasilnya?"
        android:textColor="#949391"
        android:textSize="14dp"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/winners"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/winners"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/puas"/>

    <TextView
        android:id="@+id/nilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nilai kamu:"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#949391"
        android:layout_below="@id/winners"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/nilai80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80"
        android:layout_centerHorizontal="true"
        android:textSize="100dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#FFC727"
        android:layout_below="@+id/nilai"
        android:layout_marginTop="-25dp"/>

    <TextView
        android:id="@+id/benar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benar:"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#949391"
        android:layout_below="@id/nilai80"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-40dp"/>

    <TextView
        android:id="@+id/salah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salah:"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#949391"
        android:layout_below="@id/nilai80"
        android:layout_alignParentRight="true"
        android:layout_marginRight="130dp"
        android:layout_marginTop="-40dp"/>

    <ImageView
        android:id="@+id/benar2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/benar"
        android:layout_below="@id/benar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/salah"
        android:layout_below="@id/salah"
        android:layout_alignParentRight="true"
        android:layout_marginRight="130dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="30dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#000000"
        android:layout_below="@id/benar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/5"
        android:textSize="30dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#E2E1E1"
        android:layout_below="@id/benar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#000000"
        android:layout_below="@id/salah"
        android:layout_alignParentRight="true"
        android:layout_marginRight="105dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/5"
        android:textSize="30dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#E2E1E1"
        android:layout_below="@id/salah"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_marginTop="5dp"/>

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:background="@drawable/shape"
        android:backgroundTint="#897667"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/shape2"
        android:fontFamily="@font/poppins_semibold"
        android:text="Daftar"
        android:textSize="16dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/masuk5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="82dp"/>

    <TextView
        android:id="@+id/masuk4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ulangi"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="163dp"/>


</RelativeLayout>