<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape20"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"/>
            
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/profile"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="50dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ayu Nilam S."
                android:textSize="20dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_marginTop="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="155dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" @ayyrfvgirl"
                android:textSize="12dp"
                android:textColor="#897667"
                android:fontFamily="@font/poppins_semibold"
                android:layout_alignParentTop="true"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="152dp"
                android:layout_alignParentLeft="true"/>

            <ImageButton
                android:id="@+id/changeprofile"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:src="@drawable/ubah_profil"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_alignParentTop="true"
                android:layout_marginTop="110dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="150dp"/>



        </RelativeLayout>

    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape10"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/shape11"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="285dp"/>

    <ImageButton
        android:id="@+id/btn_home4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="25dp"
        android:background="@null"
        android:onClick="onClickImageHome4"
        android:scaleType="fitCenter"
        android:src="@drawable/home_grey"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="340dp"
        android:layout_marginBottom="29dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Profil"
        android:textColor="#ffffff"
        android:textSize="12dp"
        tools:ignore="TextSizeCheck" />

    <ImageButton
        android:id="@+id/btn_book4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="135dp"
        android:layout_marginBottom="25dp"
        android:background="@null"
        android:onClick="onClickImageBook4"
        android:scaleType="fitCenter"
        android:src="@drawable/book_grey"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btn_flag4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="220dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:onClick="onClickImageFlag4"
        android:scaleType="fitCenter"
        android:src="@drawable/flag_grey"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btn_profile4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="300dp"
        android:layout_marginBottom="25dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/profile_white"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</RelativeLayout>