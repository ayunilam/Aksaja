<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFAEA0"
    android:orientation="vertical"
    tools:context=".ActivityOpening3">

    <ImageView
        android:id="@+id/learning2"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/learning_kids"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"

        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/ellipse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-50dp"
        android:layout_below="@+id/learning2"/>

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:text="Selamat Datang"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="280dp"
        android:textColor="#000000"
        android:textSize="38dp" />

    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/poppins_bold"
        android:text="di"
        android:layout_marginLeft="110dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="230dp"
        android:textColor="#000000"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Aksaja"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="230dp"
        android:textColor="#897667"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/text9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/poppins_bold"
        android:text="!"
        android:layout_marginLeft="275dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="230dp"
        android:textColor="#000000"
        android:textSize="35dp" />

    <RelativeLayout
        android:id="@+id/masok"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape"
            android:backgroundTint="#897667"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16dp"
            android:onClick="onClickLogin"/>

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/masuk4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#ffffff"
            android:onClick="onClickDaftar"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/shape2"
        android:fontFamily="@font/poppins_semibold"
        android:text="Daftar"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/masuk5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="82dp"/>


</RelativeLayout>